# editorconfig.org
root = true

[*.js]
# 项目中采用tab作为代码缩进样式
indent_style = tab
# 定义换行符，支持lf,cr 和 crlf
end_of_line = lf
# 编码格式，编码格式，支持latin1、utf-8、utf-8-bom、utf-16be和utf-16le，不建议使用uft-8-bom。
charset = utf-8
# 设为true表示会除去行尾的任意空白字符，false反之。
trim_trailing_whitespace = true
# 设为true表明使文件以一个空白行结尾，false反之。
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
